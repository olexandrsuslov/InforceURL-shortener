@using System.Text
@model InforceUrll.Models.ShortUrl
@{
    ViewData["Title"] = " Short URL info";
}

<br />

<div class="jumbotron">

    <h1>URL Shortener</h1>

    <br />

    <p>You can see below the details of this short URL.</p>

    <br />

    <ul>
        <li>
            <span class="col-md-2">
                <strong>URL Id:</strong>
            </span>
            @Model.Id
        </li>
        <li>
            <span class="col-md-2">
                <strong>Original URL:</strong>
            </span>
            <a href="@Model.OriginalUrl">
                @Model.OriginalUrl
            </a>
        </li>
        <li>
            <span class="col-md-2">
                <strong>Short URL:</strong>
            </span>
            @{
                var p = ViewData["Path"];
                var route = new StringBuilder($"http://127.0.0.1:5000//ShortUrls/RedirectTo/{p}");
            }
            @Html.ActionLink($"{route}", "RedirectTo", new { path = p})
        </li>
    </ul>
</div>